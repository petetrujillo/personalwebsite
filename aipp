    <footer class="bg-slate-800 text-slate-400 mt-24">
        <div class="container mx-auto px-6 py-8 flex flex-col md:flex-row justify-between items-center text-center md:text-left">
            <p class="text-sm">&copy; 2025 Pete Trujillo. All rights reserved.</p>
            <div class="flex gap-6 mt-4 md:mt-0">
                <a href="https://linkedin.com/in/petetru" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">
                    <i data-lucide="linkedin" class="w-6 h-6"></i>
                </a>
                <a href="https://github.com/petetrujillo/" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">
                    <i data-lucide="github" class="w-6 h-6"></i>
                </a>
            </div>
        </div>
    </footer>

<script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // --- Define variables after DOM is loaded ---
            const projectNavLinks = document.querySelectorAll('.project-nav-link');
            const projectDetailPanes = document.querySelectorAll('.project-detail');
            const navLinks = document.querySelectorAll('.nav-link, .nav-link-mobile, .nav-link-cta');
            const pageSections = document.querySelectorAll('.page-section');
            const desktopNavLinks = document.querySelectorAll('.nav-link');
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            // --- Lucide Icons ---
            lucide.createIcons();

            /* =========================================
               FEATURE 1: TYPEWRITER EFFECT
            ========================================= */
            const textToType = "AI STRATEGIST | AI GOVERNANCE | TRUST & RISK";
            const typeSpeed = 50; // ms
            let charIndex = 0;
            const typeTarget = document.getElementById("typewriter-text");
            let typeInterval;

            function startTypewriter() {
                if (!typeTarget) return;
                
                // Reset
                typeTarget.innerHTML = ""; 
                charIndex = 0;
                if(typeInterval) clearInterval(typeInterval);

                // Start typing
                function type() {
                    if (charIndex < textToType.length) {
                        typeTarget.innerHTML += textToType.charAt(charIndex);
                        charIndex++;
                        typeInterval = setTimeout(type, typeSpeed);
                    }
                }
                type();
            }
            // Start typing immediately
            startTypewriter();


            /* =========================================
               FEATURE 2: STRATEGIC RADAR CHART
            ========================================= */
            let chartInstance = null;

            function initChart() {
                const ctx = document.getElementById('skillsChart');
                // Only init if element exists and not already created
                if(ctx && !chartInstance) {
                    chartInstance = new Chart(ctx.getContext('2d'), {
                        type: 'radar',
                        data: {
                            // LABELS: The "Whole Product" view of AI
                            labels: [
                                ['AI Governance'],   
                                ['Product'], 
                                ['Tech'], 
                                ['Risk'], 
                                ['Data'], 
                             
                            ],
                            datasets: [{
                                label: 'Strategic Capabilities',
                                data: [80, 90, 80, 70, 95], 
                                fill: true,
                                backgroundColor: 'rgba(234, 88, 12, 0.2)', // Orange-600 with opacity
                                borderColor: 'rgba(234, 88, 12, 1)',       // Orange-600
                                pointBackgroundColor: 'rgba(234, 88, 12, 1)',
                                pointBorderColor: '#fff',
                                pointHoverBackgroundColor: '#fff',
                                pointHoverBorderColor: 'rgba(234, 88, 12, 1)'
                            }]
                        },
                        options: {
                            layout: {
                                padding: 20
                            },
                            scales: {
                                r: {
                                    angleLines: { display: true, color: '#e2e8f0' }, 
                                    grid: { color: '#e2e8f0' },
                                    suggestedMin: 0,
                                    suggestedMax: 100,
                                    ticks: { display: false, stepSize: 20 },
                                    pointLabels: {
                                        font: { size: 11, family: "'Inter', sans-serif", weight: '600' },
                                        color: '#334155', 
                                        padding: 10 
                                    }
                                }
                            },
                            plugins: {
                                legend: { display: false }
                            },
                            responsive: true,
                            maintainAspectRatio: false 
                        }
                    });
                }
            }

            /* =========================================
               FEATURE 3: SCROLL REVEAL
            ========================================= */
            function reveal() {
                var reveals = document.querySelectorAll(".reveal");
                var windowHeight = window.innerHeight;
                var elementVisible = 20; 

                reveals.forEach((element) => {
                    var elementTop = element.getBoundingClientRect().top;
                    if (elementTop < windowHeight - elementVisible) {
                        element.classList.add("active");
                    }
                });
            }
            // Listener for scroll
            window.addEventListener("scroll", reveal);
            // Initial check
            reveal();


            /* =========================================
               EXISTING LOGIC (PAGE NAV, FILTER, ETC)
            ========================================= */

            function showProject(projectId, clickedLink) {
                projectDetailPanes.forEach(pane => {
                    pane.classList.add('hidden');
                });
                const targetPane = document.getElementById('project-' + projectId);
                if (targetPane) {
                    targetPane.classList.remove('hidden');
                    lucide.createIcons();
                }
                projectNavLinks.forEach(link => {
                    link.classList.remove('active');
                });
                if (clickedLink) {
                    clickedLink.classList.add('active');
                }
            }
            
            window.showPage = function(pageId) {
                pageSections.forEach(section => {
                    section.classList.add('hidden');
                });

                const targetSection = document.getElementById(pageId);
                if (targetSection) {
                    targetSection.classList.remove('hidden');
                    lucide.createIcons(); 
                    
                    // Specific actions based on page
                    if (pageId === 'about') {
                        startTypewriter();
                    }
                    if (pageId === 'expertise') {
                        // Wait a tick for the div to be visible, then render chart
                        setTimeout(initChart, 100);
                    }
                    if (pageId === 'projects') {
                        showProject('start', null);
                        projectNavLinks.forEach(link => link.classList.remove('active'));
                    }
                    
                    // Trigger reveal check whenever page changes
                    setTimeout(reveal, 50); 
                }
                
                desktopNavLinks.forEach(link => {
                    if (link.dataset.page === pageId) {
                        link.classList.add('nav-active');
                    } else {
                        link.classList.remove('nav-active');
                    }
                });
            }

            if (mobileMenuButton) {
                mobileMenuButton.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                });
            }

            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    const pageId = link.dataset.page;
                    
                    if (!link.classList.contains('project-nav-link')) {
                        e.preventDefault();
                        window.showPage(pageId);
                        window.location.hash = pageId; 
                    }
                    if (mobileMenu) {
                        mobileMenu.classList.add('hidden');
                    }
                });
            });

            projectNavLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const projectId = link.dataset.project;
                    showProject(projectId, link);
                });
            });
            
            document.querySelectorAll('.project-link').forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    
                    if (!link.dataset.project) {
                        const targetId = link.getAttribute('href').substring(1);
                        const targetElement = document.getElementById(targetId);
                        if (targetElement) {
                            targetElement.scrollIntoView({ behavior: 'smooth' });
                        }
                        return;
                    }

                    const projectId = link.dataset.project;
                    window.showPage('projects');
                    window.location.hash = 'projects';
                    
                    const sidebarLink = document.querySelector(`.project-nav-link[data-project="${projectId}"]`);
                    if (sidebarLink) {
                        showProject(projectId, sidebarLink);
                    }
                });
            });

            const currentHash = window.location.hash.substring(1);
            if (currentHash) {
                const targetSection = document.getElementById(currentHash);
                if (targetSection && targetSection.classList.contains('page-section')) {
                     window.showPage(currentHash);
                } else {
                    window.showPage('about'); 
                }
            } else {
                window.showPage('about');
            }

            const searchInput = document.getElementById('project-search');
            if (searchInput) {
                searchInput.addEventListener('input', (e) => {
                    const term = e.target.value.toLowerCase();
                    projectNavLinks.forEach(link => {
                        if (link.dataset.project === 'start') return;
                        const text = link.textContent.toLowerCase();
                        if (text.includes(term)) {
                            link.classList.remove('hidden');
                        } else {
                            link.classList.add('hidden');
                        }
                    });
                });
            }
        });
    </script>
</body>
</html>
